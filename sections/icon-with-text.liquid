<h3>{{ section.settings.heading }}</h3>
<p>{{ section.settings.description }}</p>

{%for block in section.blocks %}
    <img src="{{ block.settings.image | | img_url: 'master'}}"/>
{%endfor%}


{% schema %}
{
    "name": "icon with text above",
    "settings": [
    {
    "type": "text",
    "label": "Your Headline for the section",
    "id":"heading"
    },{
    "type": "richtext",
    "id": "description",
    "label": "Your Description"
    }
    ],
    "presets": [
    {
    "category": "Custom",
    "name":"Icon With Text"
    }
    ],
    "blocks":[{
    "type": "image",
    "name": "image block",
    "settings": [
    {
    "type": "image_picker",
    "label": "Your Image",
    "id": "image"
    }
    ]
    }
    ]
}
{% endschema %}
