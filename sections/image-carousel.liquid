<section></section>
{% schema %}
  {
    "name": "Inc Slider",
    "settings": [],
    "presets": [
      {
        "name": "Inc Slider",
        "category": "Custom"
      }
    ],
    "blocks": [{
      "type": "image",
      "name": "Carousel Image",
      "settings": [{
        "type": "image_picker",
        "id": "image",
        "label": "Select Image"
      }]
    }],
  }
{% endschema %}
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<div class="main-carousel">
  {% for block in section.blocks %}
    <div class="carousel-cell">
      <img src="{{ block.settings.image | img_url: '2000x' }}" 
           alt="Carousel Image" 
           width="2000" 
           height="2000" />
    </div>
  {% endfor %}
</div>
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<script>
  var flkty = new Flickity( '.main-carousel', {
    cellAlign: 'left',
    contain: true
  });
</script>
<style>
  .main-carousel {
    display: block;
    width: 100%;
    height: 100vh;
  }
  .carousel-cell {
    width: 100%;
    height: 100vh;
  }

  .carousel-cell img {
    width: 100%;
    height: 100vh;
    object-fit: cover;
  }
</style>